<!DOCTYPE html>
<html lang="en">

<head>
    <title>Add Coupon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100%;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .sidebar a {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            color: white;
            display: block;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background-color: #495057;
        }

        .main-content {
            margin-left: 260px;
            padding: 20px;
        }

        .main-content h2 {
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
        }

        .btn-submit {
            background-color: #28a745;
            border: none;
        }

        .btn-submit:hover {
            background-color: #218838;
        }
        #image-container {
        display: flex;
        flex-wrap: wrap;
        width: 150px;
        height: 100px;
        }
        .preview-image {
        width: 50px;
        height: 50px;
        margin: 5px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <a href="/dashUsers">Users</a>
        <a href="/adminOrder">Orders</a>
        <a href="/addproduct">Add Product</a>
        <a href="/salesReport">Sales Chart</a>
        <a href="/addcoupon">Add Coupon</a>
        <a href="/viewCoupon">View Coupon</a>
        <a href="/addOffer">Add Offer</a>
        <a href="/viewOffer">View Offer</a>
        <a href="/adCategory">Add Category</a>
        <a href="/viewcategory">View Category</a>
        <a href="/adminLogout"><i class="fas fa-sign-out-alt" style="font-size:20px;color:red"></i> Logout</a>
    </div>

    <div class="main-content">
        <h2>Add coupon</h2>
        <div class="container">
            <div class="row">
                <% if(typeof message !=='undefined' ) { %>
                    <div class="alert alert-danger text-center">
                        <%= message %>
                    </div>
                    <% } %>
                        <div class="col-md-6 mx-auto">
                            <form class="mt-5" action="/adpostCoupon" method="post">
                                <div class="mb-3">
                                    <label for="UrunID" class="form-label">Coupon Code</label>
                                    <input name="couponcode" type="text" class="form-control" id="UrunID" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="UrunMiktar">Discount</label>
                                    <input name="discount" min="1" type="number" class="form-control" id="UrunMiktar"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="Kategori" class="form-label">Expiry date</label>
                                    <input name="expirydate" type="date"  class="form-control" id="expirydate" required>
                                </div>
                                <div class="mb-3">
                                    <label for="Kategori" class="form-label">Purchase amount</label>
                                    <input name="purchaseamount" type="number" min="1" class="form-control" id="UrunMiktar" required>
                                </div>
                               
                              
                                
                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                        class="btn btn-success text-white btn-outline-success form-control w-50 m-3 btn-submit">Add Coupon</button>
                                </div>
                            </form>
                        </div>
                </div>
        </div>
    </div>
   
     <!-- script for not selecting the date before todays date -->
     <script>
        // Get the current date in the format "YYYY-MM-DD"
        const currentDate = new Date().toISOString().split('T')[0];
        // Set the min attribute of the input field to the current date
        document.getElementById('expirydate').min = currentDate;
    </script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
        integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
        integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
        crossorigin="anonymous"></script>
</body>

</html>