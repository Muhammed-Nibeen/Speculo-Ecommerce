<!-- Sign UP form -->

<div class="signup">
<div class="text-center center-div " id="login">
  <div class="container w-25 border py-5  ">
    <div class="title">
      <h2 class="font-weight-bold">User Signup</h2>
      <span>Login for the new user</span>
      <% if(locals.message){%>
        <div class="alter alert-success text-center">
          <%=message%>
        </div>
        <% }%>
    </div>
    <form action="/register" method="POST" class="pt-3 rounded-3">
      <div class="form-group">
        <input type="text" class="form-control" name="firstname"placeholder="First name" required>
        <medium class="form-text text-dark text-left">First name</medium> 
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="lastname"placeholder="Last name" required>
        <medium class="form-text text-dark text-left">Last name</medium> 
      </div>
      <div class="form-group">
        <input type="email" class="form-control"placeholder="email"name="email" required>
        <medium class="form-text text-dark text-left">Email adddress</medium> 
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password"placeholder="password" required>
        <medium class="form-text text-dark text-left">password</medium> 
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="referalcode"placeholder="if any referalcode" >
        <medium class="form-text text-dark text-left">If any referalcode</medium> 
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="referallink"placeholder="if any referallink" >
        <medium class="form-text text-dark text-left">If any referallink</medium> 
      </div>
      <button type="submit" class="btn btn-secondary rounded-pill">Sent otp</button>
    </form>
    <a href="" class="Asin">Sign In</a><br>
  </div>
</div>
