<!-- Login form -->
<div class="adlogin">
<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title">
      <h2 class="font-weight-bold">Login</h2>
      <span>Login for the Admin</span>
      <% if(locals.message){%>
        <div class="alter alert-success text-center">
          <%=message%>
        </div>
        <% }%>
    </div>
    <form action="/adminLogin" method="POST" class="pt-3">
      <div class="form-group">
        <input type="email" class="form-control"placeholder="email"name="email" required>
        <small class="form-text text-muted text-left">Email</small> 
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password"placeholder="password" required>
      </div>
      <button type="submit" class="btn btn-success rounded-pill">Submit</button>
    </form>
  </div>
